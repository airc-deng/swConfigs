"dhs add fro linux.cn to configure the .vimrc
set nocompatible

set number

set ruler

set showcmd

set history=100

set showmatch

set autoindent
set cindent

syntax enable
syntax on

set t_Co=256

set ignorecase

set backspace=indent,eol,start

set mouse=a

set tabstop=4

set shiftwidth=4

set smarttab
set softtabstop=4

set expandtab

set encoding=utf-8

filetype on

filetype plugin on

filetype plugin indent on


